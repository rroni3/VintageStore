<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VintageStore.Views.CollectionViewDemo"
             Title="CollectionViewDemo">
    <CollectionView ItemsLayout="VerticalGrid, 3" SelectionMode="Single">
        <CollectionView.ItemsSource>
            
            <x:Array Type="{x:Type x:String}"
                     <x:String>Item 1 </x:String>
                <x:String>Item 2</x:String>
                <x:String>Item 3</x:String>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Background="Beige" Padding="5" Margin="5">
                    <Label Text="{Binding.}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>